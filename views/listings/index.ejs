<% layout("/layouts/boilerplate.ejs") %>

<script src="/js/filter.js"></script>




<body>
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-house"></i></div>
      <p>All</p>
    </div>
    
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic City</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castle</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctics</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display Total Before Taxes</label>
      </div>
    </div>
    
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(list of allListings){%>
    <a href="/listing/<%=list._id%>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%=list.image.url%>"
          class="card-img-top"
          alt="card image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=list.title%></b>
            <br />
            &#8377;<%=list.price.toLocaleString("en-IN")%>
            <i class="tax-info">&nbsp; &nbsp 18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>

<script>
  let taxSwitch=document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      if (info.style.display === "none" || info.style.display === "") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  })
</script>